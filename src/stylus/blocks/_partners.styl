.Partners
  padding-bottom 7rem
  &__subtitle
    font-family 'Open Sans'
    font-size 2.8rem
    font-weight 400
    margin-bottom 1.4rem
    text-align center
  &__title
    font-family 'Gotham Pro'
    font-size 4.6rem
    font-weight 900
    text-align center
    margin-bottom 5rem
  &__wrapper
    display flex
    justify-content space-between
    align-items center
  &__slider
    &_wrap
      display flex
      justify-content center
      align-items center
      height 14rem
    &_slide
      & img
        display block
        width 100%
        height 100%
        max-height 14rem
        object-fit contain
  &__buttons
    margin-left 6rem
    display flex
    justify-content center
    align-items center
  &__button
    cursor pointer
    outline none
    user-select none
    & svg
      & g
        opacity 0.8
    &_prev
      margin-right 1.4rem
    &_next
      & svg
        transform: rotate(180deg);
div.Partners__buttons > div.Partners__button.Partners__button_next.swiper-button-disabled
  opacity 0.5 !important
div.Partners__buttons > div.Partners__button.Partners__button_prev.swiper-button-disabled
  opacity 0.5 !important
@media (max-width 1000px)
  .Partners
    &__subtitle
      font-size 2.4rem
    &__title
      font-size 3.6rem
    &__wrapper
      display block
    &__slider
      &_container
        margin-bottom 3rem !important
    &__buttons
      margin-left 0
@media (max-width 667px )
  .Partners
    &__subtitle
      font-size 1.6rem
    &__title
      font-size 2.6rem
    &__button
      & svg
        width 44px
        height 44px

