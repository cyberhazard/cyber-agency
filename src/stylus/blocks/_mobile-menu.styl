.Mobile
  &__hamburger
    display none
    margin-right 2rem
    cursor pointer
    & svg
      width 4rem
      height 3rem
      & g
        fill black
.Mob-menu
  position fixed
  top 0
  left 100%
  display flex
  flex-direction: column
  width 100%
  height 100vh
  background-color rgba(255,255,255,0.95)
  z-index: 20000
  padding 3rem 1.2rem
  transition: .5s
  will-change: left
  &__left
    display flex
    justify-content flex-start
    align-items center
  &__top
    display flex
    justify-content: space-between
    align-items: center
    flex-shrink: 0
    flex-grow: 0
  &__close
    cursor pointer
    width 32px
    margin-right 2.6rem
    & svg
      height 32px
      & g
        fill black
  &__logo
    & svg
      width 100%
      max-width 10rem
  &__menu
    flex-grow: 1
    padding-top 1rem
    display flex
    flex-direction: column
    align-items: center
    justify-content: space-around
  &__item
    width 100%
    text-align center
    padding 3.4rem 0
    font-family: 'Open Sans'
    font-size: 2.2rem
    color black
    transition 0.3s
    &:hover
      background #FEF2F6


.Mobile
  &__line
    display none
    justify-content space-between
    align-items center
    position: fixed;
    padding 2rem
    background: black
    top: 0;
    right: 0;
    width 100%
    z-index: 9;
  &__phone
    display flex
    justify-content flex-start
    align-items center
  &__icon_ph
    width 2rem
    object-fit cover
    margin-right 1rem
  &__link
    color: #eaeaea;
    font-family: Akrobat;
    font-size: 2rem;
    font-weight: 700;
  &__hamburger
    cursor pointer
    display none
  &__text
    font-family: 'Open Sans'
    font-weight: 600
    font-size: 1.4rem
    color #7AC2FB
    margin-right 1rem
  &__icon
    width 3.2rem
    & rect
      fill white


@media (max-width 1000px)
  .Mobile
    &__hamburger
      display block

@media (max-width: 667px)
  .Mob-menu
    &__item
      font-size: 1.8rem
      padding 1rem 0
  .Mobile
    &__line
      display flex
  .Mob-menu .Header__phone
    display none
