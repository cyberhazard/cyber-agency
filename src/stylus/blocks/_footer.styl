.Footer
  padding 4rem 0
  &__logo
    & svg
      max-width 14rem
      width 100%

  &__top
    display flex
    justify-content space-between
    align-items center
    margin-bottom 4.6rem
  &__socials
    display flex
    justify-content center
    align-items center
  &__social
    margin-right 1.4rem
    &:last-child
      margin-right 0
  &__bottom
    display flex
    justify-content space-between
    align-items center
  &__links
    display flex
    justify-content space-between
    align-items center
  &__text
    font-size 1.4rem
    font-family 'Open Sans'
    opacity 0.4
    color black
  &__rules
    margin-right 4rem
  &__social
    & img
      width 100%
      object-fit contain

@media (max-width 1000px)
  .Footer
    &__text
      width 30%
    &__links
      width 50%
      &__text
        width 100%
    &__rules
      margin-right 1rem
  .Footer__links .Footer__text
    width 100%
    white-space: nowrap
@media (max-width 667px)
  .Footer
    &__logo
      & svg
        max-width 8.6rem
    &__text
      width 100%
    &__bottom
      flex-wrap wrap
    &__copyright
      width 100%
      text-align center
      order 2
    &__links
      width 100%
      text-align center
      flex-wrap wrap
      margin-bottom 4rem
    &__rules
      margin-bottom 1rem
    &__social
      margin-right 0.6em
      & img
        max-width 3rem

