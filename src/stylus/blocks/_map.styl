.Map
  position relative
  &__content
    position relative
    height 65rem
  &__background
    position absolute
    right 0
    top -60rem
    z-index -1

  &__image
    width 100%
    height 100%
    object-fit cover
  &__form
    position absolute
    left 10%
    top 8rem
    max-width 44rem
    padding 3.8rem 5rem 5rem
    background white
    box-shadow 0 1rem 2.4rem rgba(0,0,0,0.08)
    &_item
      margin-bottom 2.2rem
      &:nth-child(4)
        margin-bottom 4.6rem
    &_title
      font-family 'Gotham Pro'
      font-weight 900
      font-size 3rem
      margin-bottom 3rem
    &_subtitle
      font-family 'Open Sans'
      font-size 1.6rem
      margin-bottom 0.8rem
      font-weight 700
    &_link
      font-family 'Open Sans'
      font-weight 400
      font-size 1.6rem
      color black
    &_line
      display flex
      justify-content flex-start
      align-items center
      & img
        margin-right 1.4rem

.Map__form .Button img
  margin-right 1.4rem
@media (max-width 1000px)
  .Map
    &__g-wrapper
      max-width none
      padding-left 0
      padding-right 0
    &__form
      &_title
        font-size 2.4rem
      &_subtitle
        font-size 1.4rem
      &_link
        font-size 1.4rem
@media (max-width 667px)
  .Map
    &__g-wrapper
      max-width: 320px;
    &__content
      display flex
      justify-content center
      flex-wrap wrap
      height auto
    &__form
      padding 4.3rem 4rem 5rem
      position relative
      left auto
      top auto
      margin-bottom 5rem
      &_title
        font-size 1.8rem
        margin-bottom 2rem
    &__image
      order 2
