*
  margin 0
  padding 0
  box-sizing border-box
  text-decoration none

html
  font-size: 10px

.Page
  font-family: 'Open Sans'

.Wrapper
  width 100%
  min-height: 100vh
  overflow-x: hidden

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 3rem
  padding-right 3rem

.Button
  display flex
  align-items center
  position relative
  font-family: 'Open Sans'
  font-weight: bold
  font-size: 1.8rem
  color #fff
  background-image: linear-gradient(to bottom, #F04140, #E41B63)
  border none
  padding 1.6rem 4rem 2rem
  border-radius 30px
  cursor pointer
  transition opacity .3s
  will-change: opacity
  flex 0 0 auto
  &_mini
    padding 1.6rem 3rem 2rem
  &::after
    content: ''
    position absolute
    top 0
    bottom 0
    left 12%
    right 12%
    border-radius 30px
    box-shadow: 0 12px 24px rgba(#E51C63,.4)
    transition box-shadow .3s
    will-change: box-shadow
  &:hover
    opacity 0.9
    &::after
      box-shadow: none

@media (max-width: 1600px)
  html
    font-size: 9px

@media (max-width: 1440px)
  html
    font-size: 8px

@media (max-width: 1280px)
  html
    font-size: 7px

@media (max-width: 1024px)
  html
    font-size: 6px

@media (max-width: 1000px)
  html
    font-size: 10px
  .g-wrapper
    max-width: 768px;

@media (max-width: 667px)
  .g-wrapper
    max-width: 320px;
